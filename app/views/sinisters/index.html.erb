<div class="panel panel-default">
  <div class="panel-heading">Listing Sinisters</div>
  <div class="panel-body">
    <%= link_to 'New Sinister', new_sinister_path, class: "btn btn-primary btn-lg btn-block" %>
    <div class="table-responsive">
      <table class="table table-striped">
        <thead>
          <tr>
            <th>Client</th>
            <th>Data</th>
            <th>Sinistro</th>
            <th>Data acidente</th>
            <th>Valor</th>
            <th>Status</th>
            <th colspan="3">Opções</th>
          </tr>
        </thead>

        <tbody>
          <% @sinisters.each do |sinister| %>
            <tr>
              <td><%= link_to truncate(sinister.client.nome, length: 25), sinister, title: sinister.client.nome %></td>
              <td><%= sinister.data %></td>
              <td><%= sinister.sinistro %></td>
              <td><%= sinister.data_acidente %></td>
              <td><%= sinister.valor %></td>
              <td><%= sinister.status %></td>
              <td><%= link_to 'Show', sinister, class: "btn btn-info btn-xs"  %></td>
              <td><%= link_to 'Edit', edit_sinister_path(sinister), class: "btn btn-primary btn-xs"  %></td>
              <td><%= link_to 'Destroy', sinister, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger btn-xs"  %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>    
  </div>
</div>

